<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <!-- Contenedor para los corazones flotantes (aparecerán encima de los demás elementos) -->
    <FrameLayout
        android:id="@+id/heartContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"/>

    <!-- Contenedor de los textos y botones (debajo de los corazones) -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:paddingBottom="120dp">

        <TextView
            android:id="@+id/tvTitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Feliz día"
            android:textSize="25sp"
            android:textColor="#802752"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvTitle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="de las Madres"
            android:textSize="30sp"
            android:textColor="#802752"
            android:textStyle="bold"
            android:fontFamily="cursive"
            android:layout_marginBottom="24dp" />

        <TextView
            android:id="@+id/tvMensaje"
            android:layout_width="263dp"
            android:layout_height="188dp"
            android:text="Feliz Día de la Madre, mamá. Gracias por tu amor, tu fortaleza y todo lo que haces por mí. Te quiero muchísimo y siempre serás mi mayor inspiración."
            android:textSize="19sp"
            android:gravity="center"
            android:padding="16dp"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnAfter"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Te Amo Mamá"
            android:backgroundTint="#802752"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:padding="8dp"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnHeart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/heart"
            android:text="Presiona Aquí"
            android:backgroundTint="#00000000"
            android:textSize="20sp"
            android:textColor="#802752"
            android:padding="8dp" />
    </LinearLayout>
</RelativeLayout>
